@model NotesApplication.Models.Note

@{
    ViewBag.Title = "Delete Note";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Delete</h4>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this note?</h3>
            
            <div class="alert alert-warning mt-3">
                <strong>Title:</strong> @Model.Title
                <hr />
                <p>
                    <strong>Content:</strong><br />
                    @if (Model.Content != null && Model.Content.Length > 150)
                    {
                        @Model.Content.Substring(0, 150)<text>...</text>
                    }
                    else
                    {
                        @Model.Content
                    }
                </p>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                    <div class="col-md-6">
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <strong>Last Updated:</strong> @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")
                        }
                    </div>
                </div>
            </div>

            @using (Html.BeginForm("Delete", "Notes", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Delete Note
                    </button>
                    <a href="@Url.Action("Index", "Notes")" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            }
        </div>
    </div>
</div>